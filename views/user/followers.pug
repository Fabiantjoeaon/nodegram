extends ../master

block content
    h2 
        a(href=`/users/${resourceUser.username}`) Back to user
    h1.text-center Followers
    ul.list
        each follower in resourceUser.followers
            - const username = follower.username;
            li.list-item
                .small__avatar.avatar(
                    style= avatar ? `background-image:url('/uploads/${avatar}')` : null 
                    class= !avatar ? 'avatar--placeholder' : null
                    data-name=username)
                a(href=`/users/${username}`)
                    span.liked-by!= username

